<%- include('partials/base.ejs', {user: user}) %>

<link rel="stylesheet" href="/stylesheets/profile.css">

<div id="profile" class="profile-container text-center mt-5">
    <!-- Display profile image -->
    <!-- <img src="{{ url_for('static', filename=image_filename.split('/')[-1]) }}" alt="Profile Image" class="img-thumbnail img-circle profile-img" style="width:200px; height:200px;">-->

    <!-- Display name -->
    <h1 class="mt-3"><%= `${user.First_Name} ${user.Last_Name}` %></h1>

    <!-- Display Preferred Name -->
    <% if (user.Preferred_Name) { %>
        <h4 class="mt-3"><%= `Preferred Name: ${user.Preferred_Name}`%></h4>
    <% } %>
    

    <!-- Display School -->
    <h4 class="mt-3">
        <% if (user.School_Name) { %>
            <%= `${user.School_Name}` %>
        <% } else { %>
            Please select a school in Edit Profile
        <% } %>
    </h4>
    
    <hr>  <!-- Horizontal Line -->

    <!-- Display Committees -->
    <h5>Committees:</h5>
    <p>
        <% if (user.Is_On_Committee) { %>
            <ul>
                <% userCommittees.forEach(element => { %>
                    <li><%= `${element.Committee_Name}` %></li>
                <% }) %>
            </ul>
        <% } else { %>
          None
        <% } %>
        
    </p>
    
    <hr>  <!-- Horizontal Line -->
    
    <!-- Display Service Statement -->
    <h5>Service Statement:</h5>
    <p>
        <% if (user.Service_Statement) { %>
            <%= `${user.Service_Statement}` %>
        <% } else { %>
            N/A
        <% } %>
    </p>

    <hr>  <!-- Horizontal Line -->

    <!-- Display Candidate Statement -->
    <h5>Candidate Statement:</h5>
    <p>
        <% if (user.Candidate_Statement) { %>
            <%= `${user.Candidate_Statement}` %>
        <% } else { %>
            N/A
        <% } %></p>
    </p>

    <!-- Placeholder for more content or other sections -->
    <h5>Marist Page</h5>
    <p><%= `${user.Website_URL}`%></p>

    <!-- Example Button: -->
    <!-- <button class="profile-btn">Edit Profile</button> -->
</div>

<%- include('./partials/footer') %>