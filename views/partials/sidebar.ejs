<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS for Vertical Sidebar */
        .sidebar {
            display: flex;       /* Flexbox for vertical centering */
            flex-direction: column;
            align-items: center;  /* This centers child items horizontally */
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 0; /* start as hidden */
            transition: width 0.3s ease; /* smooth transition */
            overflow-y: auto; /* make it scrollable if content overflows */
            background-color: #f44336; /* red theme color */
            z-index: 1000; /* make sure it's on top */
            padding: 1rem 0;  /* Some padding at the top and bottom */
        }

        /* State when sidebar is shown */
        .sidebar.show {
            width: 200px; /* adjust width as needed */
        }

        /* Style for the navbar-toggler button */
        .navbar-toggler {
            border: none;
            background: none;
        }

        /* Explicit style for the icon inside the toggler */
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(0, 0, 0, 0.5)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22m-22 8h22'%3e%3c/path%3e%3c/svg%3e");
        }

        /* Style for the close button */
        .close-btn {
            position: absolute;
            bottom: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 2rem; /* increased font size */
            color: white; /* changed color for contrast against red */
        }

        /* Horizontal centering for nav items */
        .nav-item {
            text-align: center;
        }

        .nav-link {
            color: white; /* changed link color for contrast against red */
        }

        .nav-link:hover {
            color: black; /* hover effect */
        }

        .navbar-brand {
            text-align: center;  /* Ensuring the text is centered */
            width: 100%;  /* Ensuring it takes the full width */
            color: white; /* changed text color for contrast against red */
        }
    </style>
</head>

<body>

<!-- Hamburger Button -->
<button class="navbar-toggler" type="button" onclick="toggleSidebar()">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="container-fluid">
    <div class="row">
        <!-- Vertical Sidebar -->
        <nav class="sidebar">
            <a class="navbar-brand py-3" href="#">Faculty Committees</a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/profile">Profile View</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/picture">Name and Picture</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/statement">Statement</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/committees">Committees</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Logout</a>
                </li>
            </ul>
            <!-- Close Button -->
            <span class="close-btn" onclick="toggleSidebar()">&times;</span>
        </nav>

        <!-- Content Area -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <!-- Your page content goes here -->
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        sidebar.classList.toggle('show');
    }
</script>

</body>
</html>
